    <script src="@Url.Content("~/cssCadastro/vendor/daterangepicker/daterangepicker.js")"></script>
    <script src="@Url.Content("~/cssCadastro/vendor/countdowntime/countdowntime.js")"></script>
    <script src="@Url.Content("~/cssCadastro/js/main.js")"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

