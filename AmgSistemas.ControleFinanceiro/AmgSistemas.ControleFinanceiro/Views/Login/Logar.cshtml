@model AmgSistemas.ControleFinanceiro.Models.Login
@{
    ViewBag.Title = "JA SISTEMAS - Controle de Financeiro";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/cssLogin/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/cssLogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/cssLogin/vendor/animate/animate.css")" rel="stylesheet" />
    <link href="@Url.Content("~/cssLogin/vendor/css-hamburgers/hamburgers.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/cssLogin/vendor/select2/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/cssLogin/css/util.css")" rel="stylesheet" />
    <link href="@Url.Content("~/cssLogin/css/main.css")" rel="stylesheet" />
</head>
<body>
    <div class="limiter">
        <div class="container-login100">


            <div class="wrap-login100">

                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Images/logo.png" alt="IMG" />
                </div>

                @using (Html.BeginForm("Logar", "Login",FormMethod.Post, Model))
                {
                    @*<form class="login100-form validate-form">*@
                    <span class="login100-form-title">
                        Login
                    </span>
                    <div class="wrap-input100" style="color:red">
                        @Html.ValidationSummary(true)<br />
                        @Html.ValidationMessageFor(model => model.Usuario)<br />
                        @Html.ValidationMessageFor(model => model.Senha)
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Usuário Obrigatório">

                        <!-- <asp:TextBox ID="txtUsuario" class="input100" type="text" placeholder="Usuário" runat="server"></asp:TextBox>-->
                        @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "input100", @placeholder = "Usuário" } })

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Senha Obrigatória">
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "input100", @placeholder = "Senha", @type = "password" } })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <input class="login100-form-btn" type="submit" width="300" height="42" value="Logar" />
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Esqueçeu
                        </span>
                        <a class="txt2" href="#">
                            Usuário / Senha?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        @Html.ActionLink("Criar Conta", "Cadastrar", "UsuarioCadastro", null, new { htmlAttributes = new { @class = "txt2 fa fa-long-arrow-right m-l-5" } })
                    </div>
                    @*</form>*@
                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src=@Url.Content("~/cssLogin/vendor/jquery/jquery-3.2.1.min.js")></script>
    <script src=@Url.Content("~/cssLogin/vendor/bootstrap/js/popper.js")></script>
    <script src=@Url.Content("~/cssLogin/vendor/bootstrap/js/bootstrap.min.js")></script>
    <script src=@Url.Content("~/cssLogin/vendor/select2/select2.min.js")></script>
    <script src=@Url.Content("~/cssLogin/vendor/tilt/tilt.jquery.min.js")></script>
    <!--===============================================================================================-->

    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src=@Url.Content("~/cssLogin/js/main.js")></script>
</body>
</html>
