                    $("#divParcela").hide();
                    $("#divParcelaFinal").hide();
                }

                $("#addModal").modal();
            });
        }

        function ExecutarEditar(identificador, id) {

            $("#addModal").load("Editar/" + id + "/" + identificador, function () {

                var tipo = $("#tipovalor").val();
                if (tipo == "CD" || tipo == "IV") {
                    $("#divParcela").hide();
                    $("#divParcelaFinal").hide();
                }

                $("#addModal").modal();
            });
        }

        function ExecutarExcluir(id) {

            $("#addModal").load("Excluir?id=" + id, function () {
